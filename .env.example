# OpenClaw Hardened Edition - Environment Configuration
# Copy this to .env and fill in your actual values

# ==========================================
# OWNER CONFIGURATION
# ==========================================
OWNER_EMAIL=XXXXXXXXgmail.com
OWNER_TELEGRAM=+1902XXXXXXXX

# ==========================================
# GMAIL (Password A Delivery)
# ==========================================
# Get from: https://myaccount.google.com/apppasswords
# Requires 2FA enabled first
GMAIL_USER=XXXXXXXXXX@gmail.com
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# ==========================================
# TELEGRAM (Password B Delivery)
# ==========================================
# Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdeXXXXXXXX

# Your Telegram User ID from @userinfobot
TELEGRAM_OWNER_CHAT_ID=123456XXX

# ==========================================
# ANTHROPIC API
# ==========================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==========================================
# WORK ACCOUNTS (Optional - fill in when needed)
# ==========================================
WORK_GMAIL=work@company.com
WORK_GMAIL_PASSWORD=

INSTAGRAM_HANDLE=@company_handle
TWITTER_HANDLE=@company_handle
LINKEDIN_PAGE=company-page
FACEBOOK_PAGE=company-page

# ==========================================
# SECURITY SETTINGS
# ==========================================
SECURITY_MODE=hardened
DRAFT_MODE=enabled
SINGLE_OWNER_MODE=enabled
INJECTION_DEFENSE=enabled

# ==========================================
# NETWORK CONFIGURATION
# ==========================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=3000

# Allow mobile access (after setup)
TAILSCALE_ENABLED=false

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
AUDIT_LOG=true
SECURITY_LOG=true
